                size_hint_x: .15
            Label:
                size_hint_x: .05
            Label:
                text: 'Item'
                color: utils.get_color_from_hex("#000000")
                bold: True
                size_hint_x: .7
            Label:
                text: 'Time Remaining'
                color: utils.get_color_from_hex("#000000")
                bold: True
                size_hint_x: .2
            Label:
                size_hint_x: .1

        # Produce Menu
        ScrollMenu
            id: scroll_menu
            size_hint_y: .75

        # Navigation Bar
        ButtonBar:
            id: nav_bar
            size_hint_y: .15


